@model IEnumerable<CozaStore.Models.Size>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid mt-3">
    <div class="row">
        <!-- column -->
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (@TempData["MessageAlert"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success</strong> @TempData["MessageAlert"]
                        </div>
                    }
                    <h4 class="card-title">Products</h4>

                    <a class="btn btn-primary m-b-20" href="@Url.Action("Create","Sizes")">
                        Create Sizes
                    </a>

                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th>#</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NameSize)
                                </th>
                                <th></th>
                            </tr>
                            @{ 
                                int k = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @k
                                        @{ 
                                            k++;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameSize)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Sizeid },new { @class = "btn btn-warning" }) 
                                        @Html.ActionLink("Details", "Details", new { id = item.Sizeid }, new {@class="btn btn-primary" }) 
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Sizeid }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>