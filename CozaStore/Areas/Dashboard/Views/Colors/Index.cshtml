@model IEnumerable<CozaStore.Models.Color>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Dashboard/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <div class="card">
                @if (TempData["MessageAlert"] != null)
                {
                    <div class="alert alert-success">
                        <strong>Success!!!</strong> @TempData["MessageAlert"]
                    </div>
                }
                <div class="card-body">
                    <h4 class="card-title">Colors</h4>
                    <a class="btn btn-primary" href="@Url.Action("Create")">New Colors</a>
                    <div class="table-responsive mt-3">
                        <table class="table">
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ColorName)
                                </th>
                                <th></th>
                            </tr>
                            @{ 
                                int k = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @k
                                        @{ 
                                            k++;
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ColorName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Colorid }, new { @class = "btn btn-warning" }) 
                                        @Html.ActionLink("Details", "Details", new { id = item.Colorid }, new { @class = "btn btn-primary" }) 
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Colorid }, new { @class = "btn btn-danger", onclick = "return confirm('Are sure wants to delete?');" })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>